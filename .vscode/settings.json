{
    // Prevent auto-creation of unwanted files
    "files.watcherExclude": {
        "**/app.py": true,
        "**/HACKATHON_READY.md": true,
        "**/README_updated.md": true
    },
    
    // Disable auto-save and auto-creation features that might generate files
    "files.autoSave": "off",
    "extensions.autoUpdate": false,
    
    // Exclude these files from file explorer
    "files.exclude": {
        "**/app.py": true,
        "**/HACKATHON_READY.md": true, 
        "**/README_updated.md": true
    },
    
    // Prevent search in these files
    "search.exclude": {
        "**/app.py": true,
        "**/HACKATHON_READY.md": true,
        "**/README_updated.md": true
    },
    
    // Disable auto-creation extensions
    "python.createEnvironment.trigger": "off",
    "python.defaultInterpreterPath": "./q_cure_env/Scripts/python.exe",
    
    // Disable template auto-generation
    "emmet.showExpandedAbbreviation": "never",
    "html.autoCreateQuotes": false,
    "typescript.suggest.autoImports": false
}